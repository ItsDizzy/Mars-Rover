<resources>

    <!-- Base application theme. -->
    <style name="Theme.MarsPhotos" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:shadowColor">@android:color/transparent</item>
    </style>

    <style name="Theme.MarsPhotos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MarsPhotos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MarsPhotos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
